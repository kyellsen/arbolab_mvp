{
  "name": "ArboLab Dev",
  "dockerComposeFile": [
    "../compose.yaml",           // Die Haupt-Compose im Root
    "docker-compose.dev.yml"     // Die Dev-Override im .devcontainer Ordner
  ],
  "service": "app",
  "workspaceFolder": "/app",     // WICHTIG: Das definiert den Root im VS Code Explorer

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python",
        "python.analysis.extraPaths": [
          "/app/packages/arbolab/src",
          "/app/packages/arbolab-logger/src",
          "/app/packages/arbolab-linescale3/src",
          "/app/packages/arbolab-treeqinetic/src"
        ]
      }
    }
  },

  // postCreate l√§uft nur einmal beim Erstellen.
  // Das 'uv sync' stellt sicher, dass das venv im Container existiert.
  "postCreateCommand": "uv sync --all-packages --group dev && uv run playwright install chromium --with-deps",

  "remoteUser": "root"
}
