# ArboLab Environment Configuration
# Copy this file to .env and adjust values for your environment.

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=arbolab
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=arbolab

# ==========================================
# Application Configuration
# ==========================================
# Database Connection URL (Internal Docker Network)
ARBO_DATABASE_URL=postgresql://arbolab:change_me_in_production@db:5432/arbolab

# Data Root (Internal Container Path)
ARBO_DATA_ROOT=/data

# ==========================================
# Security
# ==========================================
# Secret key for session signing (if applicable) or other cryptographic operations
SECRET_KEY=generate_a_strong_random_secret_here
